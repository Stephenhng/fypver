Screen:
    name: "setting"
    setting: setting

    GridLayout:
        cols:1
        size: root.width, root.height

        GridLayout:
            cols:1
            size_hint: .8, .8

            Label:
                id: setting
                text:"Setting"
                size_hint: .8, .7/6
                background_color: (255/255,192/255,203/255,1)
                canvas.before:
                    Color:
                        rgba: self.background_color
                    Rectangle:
                        size: self.size
                        pos: self.pos
                color: 0,0,0,1
                bold: True

            GridLayout:
                cols:1
                size_hint: .8,.4

                Button:
                    text: "Change Password"
                    background_color: (200/255,247/255,197/255,1)
                    size_hint: .8,.1
                    on_release:
                        app.change_password()

                Button:
                    text: "Log Out"
                    background_color: (200/255,247/255,197/255,1)
                    size_hint: .8,.1
                    on_release:
                        app.log_out()

            GridLayout:
                cols:1
                size_hint: .8,.8

            GridLayout:
                cols:4
                size_hint: .8, .3/2
                Button:
                    text: "HOME"
                    background_color: (92/255,151/255,191/255,1)
                    on_release:
                        app.root.current = "content"
                        root.manager.transition.direction = "right"

                Button:
                    text: "HISTORY"
                    background_color: (92/255,151/255,191/255,1)
                    on_release:
                        app.root.current = "history"
                        root.manager.transition.direction = "right"
                        app.history()

                Button:
                    text: "PROFILE"
                    background_color: (92/255,151/255,191/255,1)
                    on_release:
                        app.root.current = "profile"
                        root.manager.transition.direction = "right"
                        app.profile()

                Button:
                    text: "SETTING"
                    background_color: (92/255,151/255,191/255,1)
                    on_release:
                        app.root.current = "setting"
                        root.manager.transition.direction = "left"