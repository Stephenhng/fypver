Screen:
    name: "main"
    email: email
    passwd: passwd
    btn_log: btn_log

    GridLayout:
        cols:1
        size: root.width, root.height
        Image:
            source: "images/chatbot2.png"

        GridLayout:
            size_hint: .8, .3
            cols:2
            Label:
                text: "Email: "
                background_color: (211/255,211/255,211/255,1)
                canvas.before:
                    Color:
                        rgba: self.background_color
                    Rectangle:
                        size: self.size
                        pos: self.pos
                color: 0,0,0,1
                bold: True

            TextInput:
                id: email
                multiline: False
                hint_text:'Enter Email'
                pos_hint: {'center_x': 0.5, 'center_y': 0.705}
                size_hint: .8, .2
                foreground_color: (25/255, 25/255, 112/255, 1)

        GridLayout:
            cols:3
            size_hint: .8, .3

            Label:
                text: "Password: "
                background_color: (211/255,211/255,211/255,1)
                canvas.before:
                    Color:
                        rgba: self.background_color
                    Rectangle:
                        size: self.size
                        pos: self.pos
                color: 0,0,0,1
                bold: True

            TextInput:
                id: passwd
                multiline: False
                hint_text:'Enter Password'
                pos_hint: {'center_x': 0.5, 'center_y': 0.705}
                size_hint: .8, .2
                password: True
                foreground_color: (25/255, 25/255, 112/255, 1)

            Button:
                id: btn_log
                size_hint: .2,.1
                text: "Show"
                background_down: ''
                background_color: (240/255, 230/255, 140/255, 1)
                border: (1, 1, 1, 1)
                border_color: (255/255, 255/255, 255/255, 1)
                on_press: app.toggle_visibility()

        Button:
            size_hint: .8, .2
            text:"Register"
            background_down: ''
            background_color: (91/255, 162/255, 244/255, 1)
            border: (1, 1, 1, 1)
            border_color: (255/255, 255/255, 255/255, 1)
            on_release:
                app.root.current = "register"
                root.manager.transition.direction = "left"

        Button:
            size_hint: .8, .2
            text:"Login"
            background_down: ''
            background_color: (91/255, 162/255, 244/255, 1)
            border: (1, 1, 1, 1)
            border_color: (255/255, 255/255, 255/255, 1)
            on_release:
                app.log_in()

        GridLayout:
            cols:1
            size_hint: .9, .2
            Button:
                text: "Forget Password?"
                halign: "center"
                color: "#2200CC"
                background_color: 0, 0, 0, 0
                on_release: app.forget_pass()

        GridLayout:
            cols:1
            size_hint: .8, .5

