<History>
    size_hint_y: None
    pos_hint: {"x": .02}
    text_size: self.width, None
    height: self.texture_size[1]
    padding: 10, 16
    color: 0,0,0,1
    canvas.before:
        Color:
            rgb: (0, 176/255, 255/255, 1)
        RoundedRectangle:
            size: self.width, self.height
            pos: self.pos
            radius: [10, 10, 10, 10]

Screen:
    name: "history"
    scroll_view: scroll_view
    history: history
    history_list: history_list

    GridLayout:
        cols:1
        size: root.width, root.height

        FloatLayout:
            size_hint: .8, .2
            canvas:
                Color:
                    rgb: (255/255,192/255,203/255,1)

            Label:
                id: history
                text:"History"
                size_hint: 1, .1
                pos_hint: {"center_x":.5, "center_y": .97}
                background_color: (255/255,192/255,203/255,1)
                canvas.before:
                    Color:
                        rgba: self.background_color
                    Rectangle:
                        size: self.size
                        pos: self.pos
                color: 0,0,0,1
                bold: True


            GridLayout:
                cols:1
                height: self.minimum_height

                FloatLayout:

                    ScrollView:
                        id: scroll_view
                        do_scroll_x: False
                        do_scroll_y: True
                        always_overscroll: True

                        GridLayout:
                            cols: 3
                            id: history_list
                            size: (root.width, root.height)
                            height: self.minimum_height
                            size_hint: None, None
                            pos_hint: {'top': 10}
                            spacing: 8

                GridLayout:
                    cols:4
                    size_hint: .8, .1
                    Button:
                        on_release:
                            app.root.current = "content"
                            root.manager.transition.direction = "right"
                        Image:
                            source:"home.png"
                            size: self.size
                            keep_ratio: True
                            allow_stretch: False
                            y: self.parent.y + .4* self.parent.height -.5 * self.parent.width/self.image_ratio
                            x: self.parent.x
                            width: self.parent.width


                    Button:
                        on_release:
                            app.root.current = "history"
                            root.manager.transition.direction = "left"
                            app.history()
                        Image:
                            source:"document.png"
                            size: self.size
                            keep_ratio: True
                            allow_stretch: False
                            y: self.parent.y + .4* self.parent.height -.5 * self.parent.width/self.image_ratio
                            x: self.parent.x
                            width: self.parent.width

                    Button:
                        on_release:
                            app.root.current = "profile"
                            root.manager.transition.direction = "left"
                            app.profile()
                        Image:
                            source:"person.png"
                            size: self.size
                            keep_ratio: True
                            allow_stretch: False
                            y: self.parent.y + .4* self.parent.height -.5 * self.parent.width/self.image_ratio
                            x: self.parent.x
                            width: self.parent.width

                    Button:
                        on_release:
                            app.root.current = "setting"
                            root.manager.transition.direction = "left"
                        Image:
                            source:"settings.png"
                            size: self.size
                            keep_ratio: True
                            allow_stretch: False
                            y: self.parent.y + .4* self.parent.height -.5 * self.parent.width/self.image_ratio
                            x: self.parent.x
                            width: self.parent.width